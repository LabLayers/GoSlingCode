    ul
      li
        a.logo(href='/') Sling Code!
      li(class=title=='Home'?'active':undefined)
        a(href='/') Home
      li(class=title=='Learn'?'active':undefined)
        a(href='/learn') Learn
      li(class=title=='API Browser'?'active':undefined)
        a(href='/api') API
      li(class=title=='Contact'?'active':undefined)
        a(href='/contact') Contact
    .account
      if !user
        a(href='/login' class=title=='Login'?'active':undefined) Login
        if secrets.localAuth
          a(href='/signup' class=title=='Create Account'?'active':undefined) Signup
      else
        li.dropdown(class=title=='Account Management'?'active':undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            if user.profile.picture
              img.profile-image(src='#{user.profile.picture}')
            else
              img.profile-image(src='#{user.gravatar(60)}')
            | #{user.profile.name || user.email || user.id}&nbsp;
            i.caret
          ul.dropdown-menu
            li: a(href='/account') My Account
            li.divider
            li: a(href='/logout') Logout